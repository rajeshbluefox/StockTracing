<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardProcessingOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#326afd"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMFR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MFR"
                        android:textColor="@color/t1_color"
                        android:textSize="@dimen/dp_24" />

                    <TextView
                        android:id="@+id/valueMFR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N ENHANCE"
                        android:textColor="@color/t1_color"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product"
                        android:textColor="@color/t1_color"
                        android:textSize="@dimen/dp_24" />

                    <TextView
                        android:id="@+id/valueProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEBINET-2.5(10)"
                        android:textColor="@color/t1_color"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRackNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rack NO"
                        android:textColor="@color/t1_color"
                        android:textSize="@dimen/dp_24" />

                    <TextView
                        android:id="@+id/valueRackNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R13"
                        android:textColor="@color/t1_color"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="Batch"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="@+id/guideline0"
                app:layout_constraintTop_toBottomOf="@+id/ll1" />

            <TextView
                android:id="@+id/valueBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="LGN11/151/04"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvBatch"
                app:layout_constraintTop_toBottomOf="@+id/tvBatch" />

            <TextView
                android:id="@+id/tvExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="@id/guideline16"
                app:layout_constraintTop_toTopOf="@id/tvBatch" />

            <TextView
                android:id="@+id/valueExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10/26"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvExpiry"
                app:layout_constraintTop_toBottomOf="@+id/tvExpiry" />

            <TextView
                android:id="@+id/tvPacking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packing"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="@+id/guideline32"
                app:layout_constraintTop_toTopOf="@+id/tvExpiry" />


            <TextView
                android:id="@+id/valuePacking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvPacking"
                app:layout_constraintTop_toBottomOf="@+id/tvPacking" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="@+id/guideline48"
                app:layout_constraintTop_toTopOf="@+id/tvPacking" />


            <TextView
                android:id="@+id/valueQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvQty"
                app:layout_constraintTop_toBottomOf="@+id/tvQty" />

            <TextView
                android:id="@+id/tvFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="@+id/guideline64"
                app:layout_constraintTop_toTopOf="@+id/tvQty" />


            <TextView
                android:id="@+id/valueFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="04"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvFree"
                app:layout_constraintTop_toBottomOf="@+id/tvFree" />

            <TextView
                android:id="@+id/tvMRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="@+id/guideline80"
                app:layout_constraintTop_toTopOf="@+id/tvFree" />

            <TextView
                android:id="@+id/valueMRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="57.2"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvMRP"
                app:layout_constraintTop_toBottomOf="@+id/tvMRP" />




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.16" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.32" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.48" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.64" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/valueBatch">


                <TextView
                    android:id="@+id/btAddBatch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_two"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="14dp"
                    android:text="Add Batch"
                    android:textColor="#f3a119"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/btEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_two"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="14dp"
                    android:text="Edit"
                    android:textColor="#f3a119"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/btAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_one"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="14dp"
                    android:text="Add To Cart"
                    android:textColor="#FAFBFA"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>